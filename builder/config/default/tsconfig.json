{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "_*"
  ],
  "references": [],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",

    "declarationDir": "build/types",
    "declaration": true,

    "sourceMap": true,
    "incremental": true,
    "noEmit": true,
    //"isolatedModules": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",

    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],

    "strict": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
  }
}
